# ============================================
# ENVIRONMENT VARIABLES TEMPLATE
# ============================================
# Copy this file to '.env' and fill in your values
# Command: cp .env.example .env
#
# This file is version controlled and should NOT contain secrets
# The actual .env file is gitignored and contains your real values

# ============================================
# AUTHENTICATION MODE
# ============================================
# Options: 'facebook' | 'instagram' | 'both'
# Development Default: both
# Production Default: facebook
VITE_AUTH_MODE=both

# ============================================
# META/FACEBOOK APP CREDENTIALS
# ============================================
# Get these from: https://developers.facebook.com/apps
#
# Required Permissions for Instagram Business API:
#   - instagram_basic
#   - instagram_manage_comments
#   - instagram_manage_insights
#   - instagram_business_manage_messages
#   - pages_show_list
#   - pages_read_engagement
#   - pages_manage_metadata

VITE_META_APP_ID=your_meta_app_id_here
VITE_META_APP_SECRET=your_meta_app_secret_here

# ============================================
# OPTIONAL: CUSTOM OAUTH REDIRECT
# ============================================
# Only needed if not using default callback URL
# VITE_OAUTH_REDIRECT_URI=http://localhost:5173/auth/callback

# ============================================
# ADMIN PORTAL
# ============================================
# Show admin portal link on login page
VITE_SHOW_ADMIN_LINK=true

# ============================================
# SUPABASE CONFIGURATION
# ============================================
# Get these from: https://supabase.com/dashboard/project/[PROJECT]/settings/api
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# ============================================
# BACKEND API
# ============================================
# Your backend API base URL
VITE_API_BASE_URL=https://instagram-backend.888intelligenceautomation.in
VITE_WEBHOOK_URL=https://instagram-backend.888intelligenceautomation.in
VITE_WEBHOOK_VERIFY_TOKEN=instagram_automation_cf_token_2024

# ============================================
# N8N WORKFLOW CONFIGURATION
# ============================================
# Your N8N instance URLs for automation workflows
N8N_BASE_URL=https://your-n8n-instance.app.n8n.cloud
N8N_DM_WEBHOOK=https://n8n.888intelligenceautomation.in/webhook/instagram-dm-webhook
N8N_COMMENT_WEBHOOK=https://n8n.888intelligenceautomation.in/webhook/instagram-comment-webhook
N8N_ORDER_WEBHOOK=https://n8n.888intelligenceautomation.in/webhook/shopify-order-webhook

# ============================================
# CLOUDFLARE TUNNEL (Optional)
# ============================================
# For local development with secure tunnels
# USE_DB_TUNNEL=true
# CLOUDFLARE_TUNNEL_TOKEN=your_tunnel_token_here

# ============================================
# BACKEND ENVIRONMENT VARIABLES
# ============================================
# These are used by the backend server, not the frontend
NODE_ENV=development
PORT=3001
META_APP_ID=your_meta_app_id_here
META_APP_SECRET=your_meta_app_secret_here
WEBHOOK_VERIFY_TOKEN=instagram_automation_cf_token_2024

# ============================================
# SETUP INSTRUCTIONS
# ============================================
# 1. Copy this file: cp .env.example .env
# 2. Fill in your actual values (especially Meta App credentials)
# 3. Restart dev server: npm run dev
# 4. Navigate to /login to test authentication modes
#
# For detailed configuration guide, see: docs/AUTH_MODE_CONFIG.md
